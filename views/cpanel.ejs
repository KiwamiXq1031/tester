<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ibzz Official - Panel Hosting</title>
    <link href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --primary-dark: #4f46e5;
            --secondary: #10b981;
            --accent: #f59e0b;
            --dark: #1e293b;
            --darker: #0f172a;
            --light: #f1f5f9;
            --gray: #94a3b8;
            --success: #22c55e;
            --danger: #ef4444;
            --card-bg: rgba(255, 255, 255, 0.05);
            --card-border: rgba(255, 255, 255, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 100%);
            color: var(--light);
            min-height: 100vh;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 10% 20%, rgba(99, 102, 241, 0.1) 0%, transparent 20%),
                radial-gradient(circle at 90% 80%, rgba(245, 158, 11, 0.1) 0%, transparent 20%);
            z-index: -1;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 20px 0;
        }

        .header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(to right, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .header p {
            color: var(--gray);
            font-size: 1.1rem;
        }

        .card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }

        .section-header {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
        }

        .section-header .number {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: 600;
            margin-right: 15px;
            box-shadow: 0 4px 10px rgba(79, 70, 229, 0.3);
        }

        .section-header .title {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .input-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            font-size: 1rem;
            color: var(--light);
        }

        .input-group label span {
            color: var(--danger);
        }

        .input-group input {
            width: 100%;
            padding: 14px 16px;
            border-radius: 12px;
            border: 1px solid var(--card-border);
            background: rgba(255, 255, 255, 0.05);
            color: var(--light);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .input-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.3);
        }

        .input-group input::placeholder {
            color: var(--gray);
        }

        .packages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .package-item {
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.7), rgba(15, 23, 42, 0.7));
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .package-item::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(to right, var(--primary), var(--accent));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .package-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .package-item:hover::before {
            opacity: 1;
        }

        .package-item.selected {
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.3);
            background: linear-gradient(145deg, rgba(79, 70, 229, 0.2), rgba(99, 102, 241, 0.1));
        }

        .package-item.selected::before {
            opacity: 1;
        }

        .selected-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            color: var(--success);
            font-size: 24px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .package-item.selected .selected-icon {
            opacity: 1;
        }

        .package-name {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--light);
        }

        .package-details {
            margin-bottom: 15px;
            color: var(--gray);
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .package-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--accent);
            display: flex;
            align-items: center;
        }

        .package-price::before {
            content: "Rp ";
            font-size: 0.9rem;
        }

        .checkout-btn {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            padding: 16px 32px;
            border-radius: 12px;
            text-align: center;
            cursor: pointer;
            margin-top: 30px;
            font-weight: 600;
            font-size: 1.1rem;
            border: none;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(79, 70, 229, 0.4);
            display: none;
        }

        .checkout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 70, 229, 0.5);
        }

        .checkout-btn:active {
            transform: translateY(0);
        }

        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 15px 20px;
            border-radius: 12px;
            background: var(--danger);
            color: white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transform: translateX(100%);
            opacity: 0;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .notification.show {
            transform: translateX(0);
            opacity: 1;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }
            
            .packages-grid {
                grid-template-columns: 1fr;
            }
            
            .form-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Ibzz Official Hosting</h1>
            <p>Buat dan kelola server hosting Anda dengan mudah</p>
        </div>

        <div class="card">
            <div class="section-header">
                <div class="number">1</div>
                <div class="title">Detail Akun</div>
            </div>
            
            <div class="form-grid">
                <div class="input-group">
                    <label for="email">Email <span>*</span></label>
                    <input type="email" id="email" placeholder="Masukkan email aktif Anda" autocomplete="off">
                </div>
                
                <div class="input-group">
                    <label for="username">Username <span>*</span></label>
                    <input type="text" id="username" placeholder="Pilih username unik" autocomplete="off">
                </div>
            </div>
        </div>

        <div class="card">
            <div class="section-header">
                <div class="number">2</div>
                <div class="title">Pilih Paket Hosting</div>
            </div>
            
            <div class="packages-grid">
                <% products.forEach(function(product) { %>
                    <div class="package-item" 
                         data-id="<%= product.id %>" 
                         data-memory="<%= product.memory %>" 
                         data-disk="<%= product.disk %>" 
                         data-cpu="<%= product.cpu %>" 
                         data-price="<%= product.price %>" 
                         onclick="selectPlan(this)">
                        <i class="uil uil-check-circle selected-icon"></i>
                        <div class="package-name">Paket <%= product.name %></div>
                        <div class="package-details">
                            Memory: <%= product.memory %>MB<br>
                            Disk: <%= product.disk %>MB<br>
                            CPU: <%= product.cpu %>%
                        </div>
                        <div class="package-price"><%= product.price %></div>
                    </div>
                <% }); %>
            </div>
        </div>

        <button class="checkout-btn" id="checkoutBtn" onclick="initiateCheckout()">
            Lanjutkan Pembayaran
        </button>
    </div>

    <div class="notification" id="notification"></div>

    <script>
        let selectedPlan = null;

        function selectPlan(element) {
            // Hapus seleksi sebelumnya
            const items = document.querySelectorAll('.package-item');
            items.forEach(item => item.classList.remove('selected'));
            
            // Tandai yang dipilih
            element.classList.add('selected');
            selectedPlan = element;
            
            toggleCheckoutButton();
        }

        function toggleCheckoutButton() {
            const email = document.getElementById('email').value.trim();
            const username = document.getElementById('username').value.trim();
            
            if (email && username && selectedPlan) {
                document.getElementById('checkoutBtn').style.display = 'block';
            } else {
                document.getElementById('checkoutBtn').style.display = 'none';
            }
        }

        function showNotification(message, isError = true) {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.style.background = isError ? 'var(--danger)' : 'var(--success)';
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        async function initiateCheckout() {
            const email = document.getElementById('email').value.trim();
            const username = document.getElementById('username').value.trim();
            const price = selectedPlan.dataset.price;

            // Validasi input
            if (!email || !username || !price) {
                showNotification('Harap lengkapi semua field yang diperlukan');
                return;
            }

            // Validasi email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                showNotification('Format email tidak valid');
                return;
            }

            try {
                // Tampilkan loading state
                const checkoutBtn = document.getElementById('checkoutBtn');
                checkoutBtn.innerHTML = 'Memproses...';
                checkoutBtn.disabled = true;

                const response = await fetch(`/api/checkout?username=${encodeURIComponent(username)}&email=${encodeURIComponent(email)}&price=${encodeURIComponent(price)}`);
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.error || 'Terjadi kesalahan saat melakukan checkout');
                }

                if (data.transactionId) {
                    window.location.href = `/invoice/${data.transactionId}`;
                } else {
                    throw new Error('Transaksi gagal dibuat');
                }
            } catch (error) {
                console.error('Error during checkout process:', error);
                showNotification(error.message || 'Terjadi kesalahan saat melakukan checkout');
                
                // Reset button state
                const checkoutBtn = document.getElementById('checkoutBtn');
                checkoutBtn.innerHTML = 'Lanjutkan Pembayaran';
                checkoutBtn.disabled = false;
            }
        }

        // Event listeners untuk input fields
        document.getElementById('email').addEventListener('input', toggleCheckoutButton);
        document.getElementById('username').addEventListener('input', toggleCheckoutButton);
    </script>
</body>
</html>
